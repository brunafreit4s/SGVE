@model IEnumerable<FuncionarioModel>

    <br/><br/>
<div class="container b-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary border-bottom">Lista de Funcionários</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="FuncionarioCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Adicionar novo Funcionário
            </a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Cpf</th>
                    <th>Nome</th>
                    <th>Data de Nascimento</th>
                    <th>Rg</th>
                    <th>Celular</th>
                    <th>Telefone</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var item in Model){
                        <tr>
                            <th>@item.Cpf</th>
                            <th>@item.Nome</th>
                            <th>@item.Data_Nascimento.ToString("dd/MM/yyyy")</th>
                            <th>@item.Rg</th>
                            <th>(@item.DDD_Celular) @item.Celular</th>
                            <th>(@item.DDD_Telefone) @item.Telefone</th>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>