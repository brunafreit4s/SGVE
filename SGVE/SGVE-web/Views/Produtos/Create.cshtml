@model ProdutosViewModel

@{
    ViewData["Title"] = "Adicionar Produto";
}

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Adicionar um novo Produto</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-12 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Nome</label>
                    <input asp-for="Nome" class="form-control" maxlength="500" type="text" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-6 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Descrição sobre o Produto</label>
                    <textarea asp-for="Descricao" class="form-control" maxlength="500" type="text"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="col-2 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Quantidade</label>
                    <input asp-for="Quantidade" class="form-control" min="0" max="9999" type="number" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>

                <div class="col-4 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Marca</label>
                    <input asp-for="Marca" class="form-control" maxlength="500" type="text" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-3 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Preço</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Preco" class="form-control" type="number" min="0" max="9999.99" value="0.01" step=".01" />
                    </div>
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="col-3 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Custo</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Custo" class="form-control" type="number" min="0" max="9999.99" value="0.01" step=".01" />
                    </div>
                    <span asp-validation-for="Custo" class="text-danger"></span>
                </div>

                <div class="col-3 pb-3">
                    <label class="control-label pt-2" style="font-size:15px;">Tipo</label>
                    <input asp-for="Id_Tipo" class="form-control" type="text" maxlength="4" />
                    <span asp-validation-for="Id_Tipo" class="text-danger"></span>
                </div>
            </div>

            <div class="col-2"><label class="control-label pt-2" style="font-size:15px;">Fornecedor</label></div>
            <div class="col-10 pb-3">
                <input asp-for="Id_Fornecedor" class="form-control" type="range" />
                <span asp-validation-for="Id_Fornecedor" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Voltar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Adicionar" class="btn btn-sucess form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}