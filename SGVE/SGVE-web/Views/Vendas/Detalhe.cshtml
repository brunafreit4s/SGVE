@model ProdutosViewModel

@{
    ViewData["Title"] = "Detalhe do Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Detalhe">

    <input asp-for="Id_Produto" hidden>

    <br />
    <div class="container border border-2 border-secondary p-3 border-start-0 rounded-end border-opacity-10 rounded-4">
        <h3 class="text-primary p-3">Detalhe do Produto Selecionado</h3>
        <hr />
        <div class="row col-12 p-3">
            <div class="card-body">
                <h5 class="card-title">@Model.SubstringName()</h5>
                <hr class="text-primary"/>
                <p class="card-text">@Model.Marca</p>
                <p class="card-text">@Model.SubstringDescription()</p>
                <p class="card-text">@Model.Preco.ToString("c")</p>
                <div class="row card-footer bg-transparent border-primary">
                    <div class="col-6 col-md-3">
                        <div class="pb-3">
                            <label asp-for="Count" class="control-label pt-2 h3 text-primary" style="font-size:15px;">Quantidade</label>
                            <input asp-for="Count" class="form-control" maxlength="9" type="number" />
                        </div>

                        <a asp-action="Index" asp-controller="Vendas" class="btn btn-outline-secondary">Voltar</a>
                        <input type="submit" value="Adicionar" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}